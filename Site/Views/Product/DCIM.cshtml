@section head {
    <link href="@Url.Content("~/content/theme/sidebar.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/content/theme/product.css")" rel="stylesheet" type="text/css" />
}

@model Site.Models.Product
<div class="container-fluid viewport">
    <div class="row">
        <div class="col-xs-12 topnav">
            <ol class="breadcrumb">
                <li><a href="/">首页</a></li>
                <li><a href="#">产品中心</a></li>
                <li class="active">软件产品系列</li>
            </ol>
        </div>
    </div>
    <div class="row content">
        <div class="col-xs-2 left-nav">
            @{ Html.RenderAction("sidebar", new { product = Model }); }
        </div>
        <div class="col-xs-10 main-content">
            <section class="product">
                <article>
                    <figure>
                        <figcaption>
                            <h1>@Model.Name</h1>
                            <h3>@Model.English</h3>
                            <p>@Model.Comment</p>
                            <div class="sales">
                                <div class="prices">
                                    <span>原价：<small class="old">¥ <strong>@string.Format("{0:F2}", Model.Original)</strong> /月</small></span>
                                    <span>优惠：<small>¥ <strong>@string.Format("{0:F2}", Model.Price)</strong> /月（限专业版）</small></span>
                                </div>
                                <a class="btn-blue" href="http://console.bce.baidu.com/bos/" target="_blank">立即购买</a>
                                <a class="btn-white" href="/calculator.html#/bos/price" target="_blank">加入购物车</a>
                            </div>
                        </figcaption>
                    </figure>
                </article>
            </section>
            <section class="summary modulars">
                <h2> <span>产品概述</span> </h2>
