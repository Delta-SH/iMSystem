@using Site.Models;
@section head {
    <link href="@Url.Content("~/content/theme/about.css")" rel="stylesheet" type="text/css" />
}

<div class="page-top-banner page-about">
    <div class="container">
        <div class="header">
            <h3>联系我们</h3>
            <p>感谢您与我们联系，我们将竭诚为您服务。</p>
        </div>
    </div>
</div>

<div class="page-common-content contact-content">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/">首页</a></li>
            <li><a href="#">关于我们</a></li>
            <li class="active">联系我们</li>
        </ol>
        <div class="contact-viewport">
            <div class="contact-image">
                <img src="~/Content/images/contact-image.png" alt="" />
            </div>
            <div class="contact-title">
                <h3>联系方式</h3>
                <div class="line"></div>
            </div>
            <div class="row contact-content">
                <div class="col-xs-6 contact-left-box">
                    <h4>@iMStore.Company</h4>
                    <p>总机：@iMStore.Phone</p>
                    <p>传真：@iMStore.Fax</p>
                    <p>邮箱：@iMStore.Email</p>
                    <p>邮编：@iMStore.Code</p>
                    <p>地址：@iMStore.Address</p>
                </div>
                <div class="col-xs-6 contact-right-box">
                    <h4>7×24小时全国服务热线</h4>
                    <h4 class="contact-telephone">
                        <i class="ims-icon-font ims-icon-font-telephone"></i>
                        @iMStore.Contact
                    </h4>
                    <img src="/Content/images/weixin.png" alt="微信公众号" title="关注公众号">
                    <div>关注公众号</div>
                </div>
            </div>
            <div class="contact-title">
                <h3>联系地图</h3>
                <div class="line"></div>
            </div>
            <div class="contact-content">
                <div id="contact-map" class="contact-map">
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="http://api.map.baidu.com/api?v=3.0&ak=K9tc2EM3zGQXqar9iHrVr698YxOu8G4Z"></script>
    <script src="@Url.Content("~/scripts/contact.js")" type="text/javascript"></script>
}