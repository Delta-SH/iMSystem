@using Site.Models;
@section head {
    <link href="@Url.Content("~/content/theme/service.css")" rel="stylesheet" type="text/css" />
}

<div class="page-top-banner page-service">
    <div class="container">
        <div class="header">
            <h3>资料下载</h3>
            <p>提供产品说明书、帮助文档、产品升级包及其他相关资料的下载服务。</p>
        </div>
    </div>
</div>

<div class="page-common-content download-content">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/">首页</a></li>
            <li><a href="#">服务支持</a></li>
            <li class="active">资料下载</li>
        </ol>
        <div class="download-viewport">
            <div class="download-box">
                <ul class="tabs">
                    <li class="tab-item active">
                        <div>硬件文档</div>
                    </li>
                    <li class="tab-item">
                        <div>软件文档</div>
                    </li>
                    <li class="tab-item">
                        <div>产品升级包</div>
                    </li>
                    <li class="tab-item">
                        <div>其他资料</div>
                    </li>
                </ul>
                <div class="content">
                    <div class="content-item active">
                        @{
                            var files0 = iMStore.Downloads.FindAll(f => f.Type == 0);
                            foreach (var file in files0) {
                                <div id="@file.Id" class="download-item">
                                    <div class="download-item-left">
                                        <a class="download-item-title" href="@file.Url" target="_blank">
                                            @file.Title
                                        </a>
                                        <div class="download-item-summary">
                                            @file.Summary
                                        </div>
                                    </div>
                                    <div class="download-item-right">
                                        <div class="download-item-date">
                                            日期：@CommonHelper.DateConverter(file.CreatedTime)
                                        </div>
                                        <div class="download-item-date">
                                            版本：@file.Version
                                        </div>
                                        <a class="download-icon-button" href="@file.Url" target="_blank">
                                            <i class="ims-icon-font ims-icon-font-download"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <div class="content-item">
                        @{
                            var files1 = iMStore.Downloads.FindAll(f => f.Type == 1);
                            foreach (var file in files1) {
                                <div id="@file.Id" class="download-item">
                                    <div class="download-item-left">
                                        <a class="download-item-title" href="@file.Url" target="_blank">
                                            @file.Title
                                        </a>
                                        <div class="download-item-summary">
                                            @file.Summary
                                        </div>
                                    </div>
                                    <div class="download-item-right">
                                        <div class="download-item-date">
                                            日期：@CommonHelper.DateConverter(file.CreatedTime)
                                        </div>
                                        <div class="download-item-date">
                                            版本：@file.Version
                                        </div>
                                        <a class="download-icon-button" href="@file.Url" target="_blank">
                                            <i class="ims-icon-font ims-icon-font-download"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <div class="content-item">
                        @{
                            var files2 = iMStore.Downloads.FindAll(f => f.Type == 2);
                            foreach (var file in files2) {
                                <div id="@file.Id" class="download-item">
                                    <div class="download-item-left">
                                        <a class="download-item-title" href="@file.Url" target="_blank">
                                            @file.Title
                                        </a>
                                        <div class="download-item-summary">
                                            @file.Summary
                                        </div>
                                    </div>
                                    <div class="download-item-right">
                                        <div class="download-item-date">
                                            日期：@CommonHelper.DateConverter(file.CreatedTime)
                                        </div>
                                        <div class="download-item-date">
                                            版本：@file.Version
                                        </div>
                                        <a class="download-icon-button" href="@file.Url" target="_blank">
                                            <i class="ims-icon-font ims-icon-font-download"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                    <div class="content-item">
                        @{
                            var files3 = iMStore.Downloads.FindAll(f => f.Type == 3);
                            foreach (var file in files3) {
                                <div id="@file.Id" class="download-item">
                                    <div class="download-item-left">
                                        <a class="download-item-title" href="@file.Url" target="_blank">
                                            @file.Title
                                        </a>
                                        <div class="download-item-summary">
                                            @Html.Raw(file.Summary)
                                        </div>
                                    </div>
                                    <div class="download-item-right">
                                        <div class="download-item-date">
                                            日期：@CommonHelper.DateConverter(file.CreatedTime)
                                        </div>
                                        <div class="download-item-date">
                                            版本：@file.Version
                                        </div>
                                        <a class="download-icon-button" href="@file.Url" target="_blank">
                                            <i class="ims-icon-font ims-icon-font-download"></i>
                                        </a>
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="@Url.Content("~/scripts/download.js")" type="text/javascript"></script>
}