@model Site.Models.NewsModel
<div class="news-top-banner">
    <div class="container">
        <div class="header">
            <h3>新闻中心</h3>
            <p>阿里云专家服务团队为用户提供应用、安全、数据等各种服务来提升用户应用系统性能，让用户的应用和<br>服务在云上更好的运转。</p>
        </div>
    </div>
</div>

<div class="news-content">
    <div class="container">
        <ol class="breadcrumb">
            <li><a href="/">首页</a></li>
            <li><a href="/home/news">新闻中心</a></li>
            <li class="active">企业新闻</li>
        </ol>
        <div class="row">
            <div class="col-xs-2 sidebar">
                <ul class="nav nav-pills nav-stacked">
                    <li class="active"><a href="/home/news">企业新闻</a></li>
                    <li><a href="#section-2">行业资讯</a></li>
                </ul>
            </div>
            <div class="col-xs-10 content">
                <div class="news-box">
                    @if(Model.PageNews != null) {
                        foreach(var news in Model.PageNews) {
                            <div class="news-list">
                                <div class="row">
                                    <div class="col-xs-3">
                                        <a href="@news.Url" target="_blank" class="thumbnail">
                                            <img src="@news.Image" alt="">
                                        </a>
                                    </div>
                                    <div class="col-xs-9">
                                        <div class="caption">
                                            <a href="@news.Url" target="_blank">
                                                <h3>@news.Title</h3>
                                            </a>
                                            <p>@news.Comment</p>
                                        </div>
                                        <div class="clearfix">
                                            <div class="pull-left">
                                                @if(news.Tag == "p1") {
                                                    <span class="label label-danger">重要新闻</span>
                                                } else if(news.Tag == "p2") {
                                                    <span class="label label-info">普通新闻</span>
                                                } else {
                                                    <span class="label label-default">其他新闻</span>
                                                }
                                            </div>
                                            <div class="pull-right timestamp">
                                                @Site.Models.CommonHelper.DateConverter(news.CreatedTime)
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                </div>
                <nav class="news-pager" aria-label="page navigation">
                    <ul class="pagination">
                        <li class="@(Model.CurrentPage == 1 ? "disabled":"")">
                            <a href="@(Model.CurrentPage > 1 ? string.Format("/home/news/{0}", Model.CurrentPage - 1) : "#")" aria-label="Previous">
                                <span aria-hidden="true">上一页</span>
                            </a>
                        </li>
                        @{
                            if(Model.TotalPages <= 9) {
                                for(var i = 1; i <= Model.TotalPages; i++) {
                                    <li class="@(i==Model.CurrentPage?"active":"")"><a href="/home/news/@i">@i</a></li>
                                }
                            } else {
                                var minPage = Model.CurrentPage - 4;
                                if(minPage <= 0) {
                                    minPage = 1;
                                }
                                
                                var maxPage = Model.CurrentPage + 4;
                                if(maxPage > Model.TotalPages) {
                                    maxPage = Model.TotalPages;
                                }
                                
                                for(var i = minPage; i <= maxPage; i++) {
                                    <li class="@(i==Model.CurrentPage?"active":"")"><a href="/home/news/@i">@i</a></li>
                                }
                            }
                         }
                        <li class="@(Model.CurrentPage == Model.TotalPages ? "disabled":"")">
                            <a href="@(Model.CurrentPage < Model.TotalPages ? string.Format("/home/news/{0}", Model.CurrentPage + 1) : "#")" aria-label="Next">
                                <span aria-hidden="true">下一页</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="@Url.Content("~/scripts/news.js")" type="text/javascript"></script>
}